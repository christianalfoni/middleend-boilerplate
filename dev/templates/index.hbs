{{!< default}}

{{#content 'initialStyle'}}

    {{> twitterBootstrap}}
    <style>

        body, html {
            height: 100%;
        }

        body {
            -webkit-font-smoothing: antialiased;
            -moz-font-smoothing: antialiased;
            -ms-font-smoothing: antialiased;
            -o-font-smoothing: antialiased;
            font-smoothing: antialiased;
            background: #e4e4e4; /* Old browsers */
            background: -moz-linear-gradient(top, #e4e4e4 0%, #c4c4c4 100%); /* FF3.6+ */
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #e4e4e4), color-stop(100%, #c4c4c4)); /* Chrome,Safari4+ */
            background: -webkit-linear-gradient(top, #e4e4e4 0%, #c4c4c4 100%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, #e4e4e4 0%, #c4c4c4 100%); /* Opera 11.10+ */
            background: -ms-linear-gradient(top, #e4e4e4 0%, #c4c4c4 100%); /* IE10+ */
            background: linear-gradient(to bottom, #e4e4e4 0%, #c4c4c4 100%); /* W3C */
            text-shadow: 0px 1px 0px rgba(255, 255, 255, 1);
        }

        table tr.edit {

        }

        table {
            border: 1px solid #BABABA;
            background-color: #FFF;
            border-radius: 5px;
            border-collapse: separate;
            -webkit-box-shadow: 0px 1px 0px rgba(255, 255, 255, 1);
            -moz-box-shadow: 0px 1px 0px rgba(255, 255, 255, 1);
            box-shadow: 0px 1px 0px rgba(255, 255, 255, 1);
        }

        table tr:last-child td:last-child {
            border-bottom-right-radius: 5px;
        }

        table tr:last-child td:first-child {
            border-bottom-left-radius: 5px;
        }

        table tr td:last-child,
        table tr td:first-child,
        table thead th:last-child,
        table thead th:first-child {
            text-align: center;
        }

        td {
            text-shadow: none;
        }

        .hidden {
            display: none;
        }

        .modal-body {
            max-height: 450px;
        }

        @-webkit-keyframes pulse {
            0% {background-color: #FFF;}
            100% {background-color: #eca9a9;}
        }
        @keyframes pulse {
            0% {background-color: #FFF;}
            100% {background-color: #eca9a9;}
        }
        .active {
            -webkit-animation: pulse 0.2s infinite alternate;
            -webkit-animation-iteration-count: 5;
            animation: pulse 0.2s infinite alternate;
            animation-iteration-count: 5;
            background-color: #eca9a9;
        }

        .active:hover td {
            background-color: #ee9797 !important;
        }

        #search {
            float: right;
        }


        #endTime input, #startTime input {
            width: 125px;
        }

    </style>
{{/content}}


<div class="container" id="app">
    <h1>OpsLog</h1>
    <div class="row">
        <div class="span8"><h4><a href="/" id="home">home</a> - <a href="/history" id="history">history</a> - <a href="" id="createMessage">create new</a> </h4></div>
        <div class="span4"><input id="search" type="text" placeholder="Search messages..."/></div>
    </div>
    <table class="table table-hover">
        <thead>
        <th width="63">priority</th>
        <th width="264">comment</th>
        <th width="145">start</th>
        <th width="146">end</th>
        <th width="162">contact</th>
        <th width="62">history</th>
        </thead>
        <tbody>
            {{#if messages}}
                {{#each messages}}
                <tr>{{> message this}}</tr>
                {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>

